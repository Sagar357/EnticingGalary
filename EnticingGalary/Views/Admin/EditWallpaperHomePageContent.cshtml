@using EnticingGalary.Models;
@model WallpaperHomePageContent

@{
    ViewBag.Title = "Edit Home Page Content Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header pb-10 page-header-dark bg-gradient-primary-to-secondary">
    <div class="container-fluid">
        <div class="page-header-content">
            <div class="page-header-title">
                <div class="page-header-icon"><i data-feather="activity"></i></div>
                <span>Edit Home Page Content</span>
            </div>

        </div>
    </div>
</div>
<div class="container-fluid mt-n10">

    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-header">
                    <a style="color:#fff;" class="btn btn-primary" href="@Url.Action("WallpaperHomePageContent","Admin")"><i class="fas fa-plus"></i>&nbsp;Back to List</a>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("EditWallpaperHomePageContent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.WHPContentId)
                        @Html.HiddenFor(model => model.TrendingThisWeek)
                        @Html.HiddenFor(model => model.FeaturedCategory)
                        @Html.HiddenFor(model => model.TrendingWallpaperAlbums)
                        @Html.HiddenFor(model => model.MostViewWallpaperAlbums)
                        @Html.HiddenFor(model => model.CreatedOn)

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.Label("Trending This Week Content", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.TrendingThisWeekContent, new { @class = "form-control summernote" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Featured Category Content", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.FeaturedCategoryContent, new { @class = "form-control summernote" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Trending Wallpaper Albums Content", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.TrendingWallpaperAlbumsContent, new { @class = "form-control summernote" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Most View Wallpaper Albums Content", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-12">
                                @Html.TextAreaFor(model => model.MostViewWallpaperAlbumsContent, new { @class = "form-control summernote" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Update Content" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                    }

                </div>
            </div>
        </div>
    </div>

</div>

@if (ViewBag.SM != null)
{
    <script type="text/javascript">
        window.onload = function () {
            sweetAlert({
                title: "Congratulations!!",
                text: "Content Edit Successfully...",
                type: "success",
                confirmButtonClass: "btn-success",
                confirmButtonText: "Thank You"
            },
    function (isConfirm) {
        if (isConfirm) {
            window.location.href = '@Url.Action("WallpaperHomePageContent", "Admin")';
        } else {
            window.location.href = '@Url.Action("WallpaperHomePageContent", "Admin")';
        }
    });
        };
    </script>
}
