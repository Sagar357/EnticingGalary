<section class="third-section my-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 hd-line">
                <h4 class="after-effect">Trending Wallpaper Albums</h4>
            </div>
        </div>

        <div class="row mt-5">
            @foreach (var subcategory in ViewBag.WallpaperAlbums)
            {
                <div class="col-lg-3 col-md-6 col-12 my-3">
                    <div class="sub-category-bx d-flex justify-content-between py-2 px-2" style="border-radius:5px;">

                        <div class="img-bx p-2">
                            <img src="@Url.Content(subcategory["CategoryImagePath"])" />
                        </div>
                        <div class="img-bx-text p-2">
