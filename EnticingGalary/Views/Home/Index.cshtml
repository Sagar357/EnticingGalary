
@{
    ViewBag.MetaKeywords = "wallpapers stock photos, free wallpaper photos download, free wallpaper desktop, Free Wallpapers Download, free high resolution wallpaper, free stock photos, high quality pictures, High Quality Images, high quality wallpapers";
    ViewBag.MetaDescription = "24wallpapers.com is a new way to download wallpapers. We collect, Beautiful, free images and photos that you can download and use for any project. Better than any royalty free or stock photos.";
    ViewBag.Title = "Get the Best Wallpapers and Background pictures on 24wallpapers.com";

}

<style>
    .header-area {
        background: transparent;
    }

    .search-top {
        display: none;
    }

    @@media(max-width: 767px) {
        .search-top {
            display: block !important;
        }

        .bars {
            color: #fff;
        }
    }
</style>


<section class="first-section main-header-section">

    <div id="CarouselSection" class="carousel slide mt-0" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#CarouselSection" data-slide-to="0" class="active"></li>
            <li data-target="#CarouselSection" data-slide-to="1"></li>
            <li data-target="#CarouselSection" data-slide-to="2"></li>
            <li data-target="#CarouselSection" data-slide-to="3"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/web/images/S1.jpg" alt="24Wallpapers Slide One" class="slider-img" />

            </div>
            <div class="carousel-item">
                <img src="~/Content/web/images/S2.jpg" alt="24Wallpapers Slide Two" class="slider-img" />
            </div>
            <div class="carousel-item">
                <img src="~/Content/web/images/S3.jpg" alt="24Wallpapers Slide Three" class="slider-img" />
            </div>

            <div class="carousel-item">
                <img src="~/Content/web/images/S4.jpg" alt="24Wallpapers Slide Four" class="slider-img" />
            </div>

            <div class="carousel-caption">
                <div class="container">
                    <h1 class="text-white text-center mb-4">Welcome to 24Wallpapers</h1>
                    <div class="row">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-6">


                            @using (Html.BeginForm("Searchcategory", "Home"))
                            {
                                <div class="d-flex">
                                    @Html.TextBox("id", "", new { @class = "form-control", @required = "required", @placeholder = "Search Wallpapers" })
                                    <button type="submit" class="py-1 px-3 searchicon"><i class="fas fa-search text-white"></i></button>

                                </div>
                            }


                            <div class="d-flex justify-content-center mt-3">
                                <a href="https://www.facebook.com/24wallpapers-102736464816398/" title="share on facebook" class="share-icons mr-2 ml-2">
                                    <i class="fab fa-facebook-f font18 ml-1"></i>
                                </a>

                                <a href="https://twitter.com/24wallpaper1" title="share on twitter" class="share-icons mr-2 ml-2">
                                    <i class="fab fa-twitter font18"></i>
                                </a>
                                <a href="https://www.instagram.com/24wallpaper1/" title="share on instagram" class="share-icons mr-2 ml-2">
                                    <i class="fab fa-instagram font18"></i>
                                </a>
                                <a href="https://www.pinterest.com/24wallpapercom/" title="share on pinterest" class="share-icons mr-2 ml-2">
                                    <i class="fab fa-pinterest-p font18"></i>
                                </a>

                            </div>

                        </div>
                        <div class="col-sm-3"></div>
                    </div>
                </div>
            </div>

            <div style="position: absolute; top: 0; left: 0; height: 100%; width: 100%; background: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5));"></div>
        </div>
    </div>
</section>

<section class="second-section mt-5">
    <div class="container">
        <div class="row  text-center">
            <div class="col-sm-4 hd-line">
                <h3 class="after-effect">Trending This Week</h3>
            </div>
        </div>

        <div class="trending-links  text-center">
            @foreach (var categorytype in ViewBag.NewCategoryTypeName)
            {
                <p class="trending-img">
                    <a href="@Url.Action("SubCategory", "Category", new {SEOMainCategoryName=categorytype.SEOCategoryTypeName})">@categorytype.CategoryTypeName</a>
                </p>
            }
        </div>

        @if (ViewBag.TrendingThisWeekContent != null)
        {
            <div class="col-md-12">
                <p>
                    @(new HtmlString(ViewBag.TrendingThisWeekContent))
                </p>
            </div>
        }
    </div>
</section>

<section class="third-section my-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 hd-line">
                <h4 class="after-effect">Featured Category</h4>
            </div>
        </div>

        <div class="row mt-5">
            @foreach (var maincategoryList in ViewBag.MainCategoryList)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-12 my-3">
                    <div class="col-lg-12 content-box bg-white p-0">
                        <a href="@Url.Action("SubCategory", "Category", new {SEOMainCategoryName=maincategoryList.SEOCategoryTypeName})" class="image-overlay">
                            <img src="@Url.Content(maincategoryList.CategoryTypeBannerImage)" data-secret="@Url.Content(maincategoryList.CategoryTypeBannerImage)" class="common-img" style="width:100%;border-radius:6px;" alt="@maincategoryList.CategoryTypeName" />
                            <div class="overlay-effect">
                                <div class="d-flex justify-content-between m-2">
                                    <span data-toggle="tooltip" data-html="true"
                                          title="hurray !"
                                          class="img-tooltip d-flex">

                                        <img src="@Url.Content(maincategoryList.CategoryTypeBannerImage)" data-secret="@Url.Content(maincategoryList.CategoryTypeBannerImage)" alt="@maincategoryList.CategoryTypeName" />
                                        <span class="text-white mt-1 ml-2">@maincategoryList.CategoryTypeName</span>
                                    </span>
                                    <span class="font18 text-white">
                                    </span>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>

        @if (ViewBag.FeaturedCategoryContent != null)
        {
            <div class="col-md-12">
                <p>
                    @(new HtmlString(ViewBag.FeaturedCategoryContent))
                </p>
            </div>
        }
    </div>
</section>



