                                <h5 class="text-white text-justyfy">@subcategory["CatName"]</h5>
                            </a>
                            <p style="color:#fff;margin-bottom:0px;font-size:12px;">
                                @subcategory["TotalSubCategory"] Wallpapers
                            </p>

                        </div>
                    </div>

                </div>
            }
        </div>

        @if (ViewBag.TrendingWallpaperAlbumsContent != null)
        {
            <div class="col-md-12">
                <p>
                    @(new HtmlString(ViewBag.TrendingWallpaperAlbumsContent))
                </p>
            </div>
        }
    </div>
</section>


