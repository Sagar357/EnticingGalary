@using EnticingGalary.Models
@model ContactEnquiry

@{

    ViewBag.MetaKeywords = "wallpapers stock photos, free wallpaper photos download, free wallpaper desktop, Free Wallpapers Download, free high resolution wallpaper, free stock photos, high quality pictures, High Quality Images, high quality wallpapers";
    ViewBag.MetaDescription = "If you have any queries related to High Quality wallpapers and website 24wallpapers, then feel free to contact us.";
    ViewBag.Title = "24wallpapers | High Quality wallpapers | Free Wallpapers Download";
}

<style>
    .header-area {
        background: #fff !important;
        box-shadow: 0px 2px 3px rgba(0,0,0,0.2);
    }

    .search-top {
        display: block !important;
    }
    
    .select2-container--default .select2-selection--single {
        padding: 8px 10px;
        height: auto;
    }
    .bars{
        color:rgb(44, 62, 82) !important;
    }
    
</style>

<br />
<br />
<br />

<section class="first-section contact-bg">
    <div class="container">
        <div class="text-center">
            <h1 class="text-white display-4 font-weight-bold">Contact Us</h1>
            <p class="text-white font18">
                It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.
            </p>
        </div>
    </div>
</section>
<section class="second-section my-5">
    <div class="container">
        <h4 class="text-center font-weight-bold" style="letter-spacing: 2px;">Customer Details</h4>
        <div class="row">
            <div class="col-sm-8 my-3">
                <div class="form-box">
                    @using (Html.BeginForm("Contact", "Home"))
                    {
                        <div class="p-4">
                            <p style="color:green;">
                                @if (@ViewBag.Message != null)
                                {
                                    <div class="alert alert-success">
                                        <strong>@ViewBag.Message</strong>
                                    </div>
                                }
                            </p>
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label><i class="far fa-user mr-2"></i>Name</label>
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Enter Your Full Name", @required = "required" })

                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label><i class="far fa-envelope-open mr-2"></i>Email Address</label>
                                        @Html.TextBoxFor(model => model.Email, new { type = "email", @class = "form-control", @placeholder = "Enter Your Email", @required = "required" })

                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <label><i class="fas fa-phone mr-2"></i>Mobile No.</label>
                                        @Html.TextBoxFor(model => model.MobileNumber, new { type = "number", @class = "form-control", @placeholder = "Enter Your Mobile Number", @required = "required" })
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-6 col-12">
                                    <div class="form-group">
                                        <label><i class="far fa-comment mr-2"></i>Messaage</label>
                                        @Html.TextAreaFor(model => model.EnquiryMessage, new { @class = "form-control", @placeholder = "Type Your Message", @required = "required", @style = "resize: none;" })
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-12">
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-block btn-primary" name="Submit" value="Submit"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="col-sm-4 my-4">
                <div class="bx-effect bg-primary text-white p-4 mt-4" style="border-radius: 5px;">
                    <div class="d-flex">
                        <div class="col-sm-2">
                            <div class="icon pt-2">
                                <i class="fas fa-phone font26"></i>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <h5 class="text-white font-weight-bold">Call Us On</h5>
                            <p class="text-white">+91-9319291170 </p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="col-sm-2">
                            <div class="icon pt-2">
                                <i class="fas fa-envelope-open font26"></i>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <h5 class="text-white font-weight-bold">Email Address</h5>
                            <p class="text-white">inquiry@24wallpaper.com</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
